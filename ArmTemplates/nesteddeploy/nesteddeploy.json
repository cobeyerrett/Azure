{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "environment": {
        "type": "string",
        "allowedValues": [
            "Dev",
            "Test",
            "Innovation"
        ]
      },
      "service":{
        "type": "string",
        "allowedValues": [
            "IIS",
            "NGinx",
            "SQL"
        ]
      },
      "tier":{
        "type": "string",
        "allowedValues": [
            "front",
            "mid",
            "back"
        ]
      },
      "vmname": {
        "type": "string"
      },
      "vmsize":{
          "type": "string",
          "allowedValues": [
            "Standard_D1_v2",
            "Standard_D2_v2",
            "Standard_D3_v2"
              
          ]
      }
    },
    "variables": {
        "keyvaultID": "[concat('/subscriptions/b73ce7d3-fd70-4018-9bc6-5d160c574707/resourceGroups/keyvault-management-rg/providers/Microsoft.KeyVault/vaults/StatCanArm',parameters('environment'))]"
    },
    "resources": [
    {
      "apiVersion": "2015-01-01",
      "name": "nestedTemplate",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/cobeyerrett/Azure/master/ArmTemplates/nesteddeploy/simplevm.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
            "adminPassword": {
              "reference": {
                "keyVault": {
                  "id": "[concat('/subscriptions/b73ce7d3-fd70-4018-9bc6-5d160c574707/resourceGroups/keyvault-management-rg/providers/Microsoft.KeyVault/vaults/StatCanArm',parameters('environment'))]"
                },
                "secretName": "vmpasswd"
              }
            },
            "adminLogin": {
                "reference": {
                    "keyVault": {
                      "id": "[variables('keyvaultID')]"
                    },
                    "secretName": "vmadmin"
                }
            },
            "subnetID":{
                "reference": {
                    "keyVault": {
                      "id": "[variables('keyvaultID')]" 
                    },
                    "secretName": "[concat(parameters('tier'),'SubnetRef')]"
                }
            },
            "vmname": {
                "value": "[parameters('vmname')]"
            },
            "vmsize": {
                "value": "[parameters('vmsize')]"
            }
        }
    }
        
    }],
    "outputs": {}
}